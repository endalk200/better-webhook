{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.16.0/.schema/devbox.schema.json",
  "packages": [
    "just@latest",
    "trivy@0.69.0",
    "nodejs@24.12.0",
    "golangci-lint@2.9.0",
    "pnpm@10.28.0",
    "go@1.26.0",
    "gofumpt@latest",
    "goimports@latest"
  ],
  "env": {
    "TRIVY_CACHE_DIR": "$PWD/.cache/trivy"
  },
  "shell": {
    "init_hook": ["mkdir -p .cache/trivy"],
    "scripts": {
      "security-scan": "just security-scan",
      "security-scan-blocking": "just security-scan-blocking",
      "security-scan-sarif": "just security-scan-sarif",
      "security-scan-secret": "just security-scan-secret",
      "security-scan-sbom": "just security-scan-sbom",
      "security-scan-license": "just security-scan-license"
    }
  }
}
