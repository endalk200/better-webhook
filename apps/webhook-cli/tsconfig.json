{
  "extends": "@better-webhook/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": false,
    "allowJs": false,
    "sourceMap": false,
    "removeComments": false,
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": false,
    "noEmitOnError": true
  },
  "include": ["src"]
}
