{
  "name": "@better-webhook/cli",
  "private": true,
  "version": "0.0.0",
  "description": "Go-based CLI for local webhook capture, replay, and template workflows.",
  "scripts": {
    "install": "go mod tidy",
    "lint": "golangci-lint run ./...",
    "format:check": "bash -euo pipefail -c 'files=$(goimports -l -local github.com/endalk200/better-webhook .); test -z \"$files\"'",
    "format:write": "goimports -w -local github.com/endalk200/better-webhook . && gofumpt -w .",
    "check-types": "go test ./... -run=^$",
    "test": "go test ./...",
    "test:race": "go test ./... -race",
    "test:cover": "go test ./... -coverprofile=coverage.out -covermode=atomic",
    "test:e2e": "go test ./e2e -tags=e2e",
    "build": "mkdir -p bin && go build -ldflags \"-X github.com/endalk200/better-webhook/apps/webhook-cli/internal/version.Version=${VERSION:-dev}\" -o bin/better-webhook ./cmd/better-webhook",
    "clean": "rm -rf bin"
  }
}
